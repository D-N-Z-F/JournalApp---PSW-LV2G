<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvJournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_dynamic_tertiary80"
        android:layout_margin="@dimen/xxs"
        app:strokeColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/xxs"
        android:elevation="@dimen/xs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/llDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/s"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDateTimeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textStyle="italic"
                    android:textSize="@dimen/mini_text_size" />

                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textStyle="italic"
                    android:textSize="@dimen/tiny_text_size" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textStyle="bold"
                    android:textSize="@dimen/extra_large_text_size"/>

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxxxs"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/extra_large_text_size"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/s"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/icon_desc"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>